<div class="container">
  <br/><br/><br/><br/>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title"><strong>Sign Up </strong></h3></div>
      <div class="panel-body">
        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password </label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"  %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Confirm password</label>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
        </div>
        <div class="form-group">
          <!-- <label for="exampleInputEmail1">Sponsor ID</label> -->
          <%= f.number_field :sponsor_id, autocomplete: "off", class: "form-control", placeholder: "Sponsor ID" %>
        </div>
        <%= f.submit "Sign Up", class: "btn btn-sm btn-default" %>
    </div>
  </div>
</div>
<% end %>
<%#= render "devise/shared/links" %>
</div>
